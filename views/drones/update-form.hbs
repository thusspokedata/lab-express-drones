<div class='bg-green-200 py-32 px-10 min-h-screen'>
  <div class='bg-white p-10 md:w-3/4 lg:w-1/2 mx-auto'>
    <h2 class='text-center text-gray-600'>Update drone</h2>
    {{#with this}}
      <form method='POST' action='/drones/{{_id}}/edit'>

        <div class='flex items-center mb-5'>

          <label
            for='name'
            class='inline-block w-20 mr-6 text-left font-bold text-gray-600'
          >Name:</label>

          <input
            type='text'
            id='name'
            name='name'
            value='{{name}}'
            class='flex-1 py-2 border-b-2 border-gray-400 focus:border-green-400 text-gray-600 placeholder-gray-400 outline-none'
          />

        </div>

        <div class='flex items-center mb-5'>
          <label
            for='text'
            class='inline-block w-20 mr-6 text-left font-bold text-gray-600'
          >Propellers:</label>
          <input
            type='number'
            min='1'
            id='propellers'
            name='propellers'
            value='{{propellers}}'
            class='flex-1 py-2 border-b-2 border-gray-400 text-gray-600 placeholder-gray-400'
          />

        </div>
        <div class='flex items-center mb-10'>
          <label
            for='text'
            class='inline-block w-20 mr-6 text-left font-bold text-gray-600'
          >MaxSpeed:</label>
          <input
            type='number'
            min='1'
            id='maxSpeed'
            name='maxSpeed'
            value='{{maxSpeed}}'
            class='flex-1 py-2 border-b-2 border-gray-400 text-gray-600 placeholder-gray-400'
          />
        </div>

        <div class='text-right'>
          <button
            type='submit'
            class='py-3 px-8 bg-teal-500 text-white font-bold'
          >Submit</button>
        </div>
      </form>
    {{/with}}

  </div>
</div>