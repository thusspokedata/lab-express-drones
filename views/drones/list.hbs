<div class='bg-green-200 py-2 px-10 min-h-screen'>
  <h2 class='ml-10 mt-5 text-2xl'>Available drones</h2>
  <div class='bg-white ml-10 mt-5 container mx-auto w-72 shadow-xl'>
    {{#each this}}
      <div class='mt-2 mx-2 border-b-2 border-gray-600'>
        <h3><b>name: </b>{{name}}</h3>
        <h4><b>propelers: </b>{{propellers}}</h4>
        <h4><b>maxSpeed: </b>{{maxSpeed}} m/s</h4>
        <div class='flex mt-2'>
          <a href='/drones/{{_id}}/edit'>
            <button
              type='button'
              class='py-1.5 px-3 text-xs text-white bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800 font-medium rounded-lg text-center mr-2 mb-2'
            >Edit Drone</button>
          </a>
          <form method='POST' action='/drones/{{_id}}/delete'>
            <button
              type='submit'
              class='py-1.5 px-3 text-xs focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg mr-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900'
            >delete drone</button>
          </form>

        </div>

      </div>
    {{/each}}

  </div>
</div>